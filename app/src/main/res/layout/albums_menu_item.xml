<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/album_container">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        >

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/album_menu_item_border">

            <ImageView
                android:id="@+id/album_menu_album_preview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_green"
                android:layout_centerInParent="true"
                >

            </ImageView>

        </RelativeLayout>



        <TextView
            android:id="@+id/albums_menu_album_name"
            style="@style/Body1"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_gravity="start"
            android:gravity="start"

            android:singleLine="true"
            android:text="Album Name">

        </TextView>

        <TextView
            android:id="@+id/albums_menu_album_size"
            style="@style/Body3"
            android:text="Empty"
            android:singleLine="true"
            android:layout_gravity="start"
            android:gravity="start"

            android:layout_width="120dp"
            android:layout_height="20dp">

        </TextView>


    </LinearLayout>

</androidx.cardview.widget.CardView>