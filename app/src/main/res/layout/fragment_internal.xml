<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/app_padding"
        android:gravity="end">

        <TextView
            android:id="@+id/btn_import_photos"
            style="@style/Body2"
            android:background="@drawable/menu_button_primary_rounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import Photos"
            android:textColor="@color/app_black"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="ImportPhotos"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
<!--        <ImageView-->
<!--            android:id="@+id/img_back"-->
<!--            android:padding="14dp"-->
<!--            android:src="@drawable/ic_dropdown"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp">-->

<!--        </ImageView>-->
        <TextView
            style="@style/Body3"
            android:id="@+id/tv_path_holder"
            android:layout_margin="10dp"
            android:text="Path/"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_internal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>