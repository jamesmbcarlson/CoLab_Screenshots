<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:padding="28dp"
    android:background="@drawable/dialog_bg_rounded"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_albums_primary"
            android:layout_marginBottom="12dp"
            />
        
        <TextView
            style="@style/Header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Album"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"

            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="18dp">

            <TextView
                style="@style/Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginBottom="4dp"
                >

            </TextView>
            <EditText
                android:id="@+id/btn_new_album_text"
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="Enter Album Name Here"
                android:background="@color/text_field">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_gravity="end"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_new_album_cancel"
                style="@style/Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancel"
                android:textColor="@color/app_tertiary"
                android:layout_marginHorizontal="20dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_new_album_continue"
                style="@style/Body2"
                android:background="@drawable/menu_button_primary_rounded_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_continue"
                android:textColor="@color/app_gray"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>
        
        
    </LinearLayout>
    
    
</LinearLayout>